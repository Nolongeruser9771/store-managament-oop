@page "/purchase_invoices/delete"
@model store_managament_oop.Pages.PurchaseInvoices.DeletePurchaseInvoiceModel
@{
    ViewData["Title"] = "Delete Purchase Invoice";
}
<div class="container mt-5">
    <h1 class="mb-4">Delete Purchase Invoice</h1>

    <!-- Confirmation Message -->
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Are you sure?</h4>
        <p>You are about to delete the sales invoice <strong>@Model.purchaseInvoice.invoiceNumber</strong>.</p>
        <p>This action cannot be undone.</p>
        <hr>
        <p class="mb-0">If you are sure, click on "Delete Invoice". Otherwise, click on "Cancel" to go back.</p>
    </div>

    <!-- Delete Confirmation Form -->
    <form method="POST" class="mt-3">
        <!-- Action Buttons -->
        <button type="submit" class="btn btn-danger">Delete Invoice</button>
        <a href="/purchase_invoices" class="btn btn-secondary ml-2">Cancel</a>
    </form>
    @Model.message
</div>