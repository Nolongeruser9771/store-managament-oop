@page "/purchase_invoices"
@model store_managament_oop.Pages.PurchaseInvoices.PurchaseInvoiceListModel
@{
	ViewData["Title"] = "Purchase Invoice List";
}
<div class="container mt-5">
	<h1 class="mb-4 d-flex justify-content-between align-items-center">
		<span>Purchase Invoices List</span>
		<div class="d-flex align-items-center gap-2">
			<!-- Search Input Group -->
			<form method="post">
				<div class="input-group me-2">
					<input type="text"
						   class="form-control"
						   placeholder="Search invoice number..."
						   id="searchInput"
						   name="searchKeyword">
					<button class="btn btn-outline-secondary" type="submit" id="searchButton">
						Search
					</button>
				</div>
			</form>
			<!-- Create Invoice Button -->
			<a href="/purchase_invoices/create" class="btn btn-primary">Create Invoice</a>
		</div>
	</h1>
	<div class="mb-2"><strong>Total:</strong> @Model.purchaseInvoices.Count items</div>
	<!-- Sales Invoices Table -->
	<table class="table table-bordered">
		<thead class="table-dark">
			<tr>
				<th>#</th>
				<th>Invoice Number</th>
				<th>Provider Name</th>
				<th>Invoice Date</th>
				<th>Total Amount (VND)</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<!-- Example Invoice -->
			@foreach (var invoice in Model.purchaseInvoices.Select((value, i) => new { Value = value, Index = i }))
			{
				<tr>
					<td>@invoice.Index</td>
					<td>@invoice.Value.invoiceNumber</td>
					<td>@invoice.Value.providerName</td>
					<td>@invoice.Value.invoiceDate</td>
					<td>@invoice.Value.totalAmount</td>
					<td>
						<a href="/purchase_invoices/edit?purchaseInvoiceId=@invoice.Value.id" class="btn btn-warning btn-sm">Edit</a>
						<a href="/purchase_invoices/delete?purchaseInvoiceId=@invoice.Value.id" class="btn btn-danger btn-sm">Delete</a>
					</td>
				</tr>
			}
			<!-- Add more rows as needed -->
		</tbody>
	</table>
</div>
