@page "/categories"
@using Entity
@model store_managament_oop.Pages.Categories.CategoryListModel
@{
    ViewData["Title"] = "Category List";
}
<div class="container mt-5">
    <h1 class="mb-4">Category List</h1>

    <!-- Search and Create Button Row -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <form method="post">
            <div class="input-group" style="width: 400px;">
                <input type="text" class="form-control" placeholder="Search Categories..." name="searchKeyword">
                <button class="btn btn-secondary" type="submit">Search</button>
            </div>
        </form>
        <div>
            <a href="/categories/create" class="btn btn-primary">Create Category</a>
        </div>
    </div>
    <div class="mb-2"><strong>Total:</strong> @Model.CategoryList.Count items</div>

    <!-- Category Table -->
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Example Category -->
            @if (Model.CategoryList != null) 
            {
                @foreach (Category category in Model.CategoryList) 
                {
                    <tr>
                        <td>@category.categoryId</td>
                        <td>@category.categoryName</td>
                        <td>@category.categoryDescription</td>
                        <td>
                            <a href="/categories/edit?categoryId=@category.categoryId" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/categories/delete?categoryId=@category.categoryId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else 
            {
                <span>@Model.message</span>
            }
        </tbody>
    </table>
</div>