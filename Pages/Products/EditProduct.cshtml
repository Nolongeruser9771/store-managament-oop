@page "/product/edit"
@model EditProductModel
@{
	ViewData["Title"] = "Edit Product";
}
<div class="container mt-5">
	<h1 class="mb-4">Edit Product</h1>

	<!-- Product Edit Form -->
	<form method="post">
		<!-- Product ID -->
		<div class="mb-3">
			<label for="productName" class="form-label">Product Name</label>
			<input type="text" class="form-control" id="productName" name="productId" value="@Model.product.productId" readonly>
		</div>

		<!-- Product Name -->
		<div class="mb-3">
			<label for="productName" class="form-label">Product Name</label>
			<input type="text" class="form-control" id="productName" name="productName" value="@Model.product.productName" required>
		</div>

		<!-- Product Price -->
		<div class="mb-3">
			<label for="productPrice" class="form-label">Product Price ($)</label>
			<input type="number" class="form-control" id="productPrice" name="price" value="@Model.product.price" step="0.01" min="0" required>
		</div>

		<!-- Product Quantity -->
		<div class="mb-3">
			<label for="productQuantity" class="form-label">Product Quantity</label>
			<input type="number" class="form-control" id="productQuantity" name="stock" value="@Model.product.stock" required>
		</div>

		<!-- Product Expired Date -->
		<div class="mb-3">
			<label for="expiredDate" class="form-label">Expired Date</label>
			<input type="date" class="form-control" id="expiredDate" name="expiredDate" value="@(Model.product.expiredDate.ToString("yyyy-MM-dd") ?? "")" required>
		</div>

		<!-- Product Manufacturer -->
		<div class="mb-3">
			<label for="productManufacturer" class="form-label">Product Manufacturer</label>
			<input type="text" class="form-control" id="productManufacturer" name="manufacturer" value="@Model.product.manufacturer" required>
		</div>

		<!-- Product Manufacturing Year -->
		<div class="mb-3">
			<label for="manufacturingYear" class="form-label">Product Manufacturing Year</label>
			<input type="number" class="form-control" id="manufacturingYear" name="manufacturingYear" value="@Model.product.manufacturingYear" placeholder="e.g., 2024" min="1900" max="2100" required>
		</div>

		<!-- Product Category -->
		<div class="mb-3">
			<label for="productCategory" class="form-label">Product Category</label>
			<!-- Category Dropdown -->
			<select name="categoryId" class="form-select" style="width: 200px;">
				@if (Model.CategoryList != null && Model.CategoryList.Count != 0)
				{
					@foreach (var category in Model.CategoryList)
					{
						@if (category.categoryId == Model.product.categoryId)
						{

							<option value="@category.categoryId" selected>
								@category.categoryName
							</option>
						}
						else
						{
							<option value="@category.categoryId">
								@category.categoryName
							</option>
						}
					}
				}
				else
				{

					<option value="" selected>No category</option>
				}
			</select>
		</div>
		<div class="text-danger">@Model.message</div>

		<!-- Action Buttons -->
		<div class="d-flex justify-content-between">
			<button type="submit" class="btn btn-success">Save Changes</button>
			<a href="/" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>
